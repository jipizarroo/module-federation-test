{
    "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "node",
      "allowJs": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "isolatedModules": false,
      "declarationMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "ignoreDeprecations": "5.0",
      "outDir": "./dist"
    },
    "include": ["src", "global.d.ts"]
  }